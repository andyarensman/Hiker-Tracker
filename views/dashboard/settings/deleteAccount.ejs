<html lang="en">

<%- include("../../partials/head.ejs") %>

<body>
  <%- include("../../partials/nav.ejs") %>
  <div class="login-container">

    <h3 class="login-form-title">Delete Account</h3>

    <%- include("../../partials/messages") %>

    <form id="login-form" action="" method="POST">
      <div class="login-item">
        <label for="email" id="login-label">Email</label><br>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Enter Email"
          required=''
        />
      </div>
      <div class="login-item">
        <label for="password" id="login-label">Password</label><br>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter Password"
          required=''
        />
      </div>
      <div class="login-item">
        <label for="password2" id="login-label">Confirm Password</label><br>
        <input
          type="password"
          id="password2"
          name="password2"
          placeholder="Confirm Password"
          required=''
        />
      </div>
      <div class="login-item">
        <label for="delete-checkbox"> Are you sure?</label><br>
        <input type="checkbox" id="delete-checkbox" name="delete-checkbox" value="delete-checkbox">
        <label for="delete-checkbox"> Yes, delete my account</label>
      </div>
      <button type="submit" id="login-button">Delete Account</button>
    </form>
    <p class="login-route">
      <a href="/dashboard/settings">Back</a>
    </p>
    <p class="login-route">
      <a href="/users/forgot">Forgot Password?</a>
    </p>

  </div>
  <%- include("../../partials/footer.ejs") %>
</body>

</html>
